<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111827">

    <!-- Background card container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rounded_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Doctor's Handwritten Predictor"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Upload & Image container -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameUpload"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_view_upload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.55"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_title">

            <!-- Image preview -->
            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/dashed_border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.60"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.7">

                <ImageView
                    android:id="@+id/img_default"
                    android:layout_width="84dp"
                    android:layout_height="76dp"
                    android:layout_gravity="center"
                    android:src="@drawable/default_image" />

                <ImageView
                    android:id="@+id/img_preview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />
            </FrameLayout>

            <!-- Upload & Capture buttons -->

            <TextView
                android:id="@+id/txt_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="@string/underlined_upload"
                android:textColor="#47de80"
                app:layout_constraintBottom_toTopOf="@+id/btn_predict"
                app:layout_constraintEnd_toStartOf="@id/txt_capture"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@+id/frameLayout" />

            <TextView
                android:id="@+id/txt_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="@string/underlined_capture"
                android:textColor="#47de80"
                app:layout_constraintEnd_toEndOf="@+id/frameLayout"
                app:layout_constraintStart_toEndOf="@id/txt_upload"
                app:layout_constraintTop_toTopOf="@id/txt_upload" />

            <!-- Predict button -->

            <Button
                android:id="@+id/btn_predict"
                android:layout_width="196dp"
                android:layout_height="42dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_gradient_button"
                android:fontFamily="@font/poppins_bold"
                android:text="Predict"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout"
                app:layout_constraintVertical_bias="0.8" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Prediction headers -->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Text Prediction"
            android:textColor="#cbcdd6"
            app:layout_constraintStart_toStartOf="@id/frameUpload"
            app:layout_constraintTop_toBottomOf="@id/frameUpload" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accuracy"
            android:textColor="#cbcdd6"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toTopOf="@id/textView2"
            app:layout_constraintEnd_toEndOf="@id/frameUpload"/>

        <!-- Divider -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#374151"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintStart_toStartOf="@id/frameUpload"
            app:layout_constraintEnd_toEndOf="@id/frameUpload"/>

        <!-- Prediction results -->

        <TextView
            android:id="@+id/txt_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Parasatukmol"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/frameUpload"
            app:layout_constraintTop_toBottomOf="@id/textView2" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="84%"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toTopOf="@id/txt_result"
            app:layout_constraintEnd_toEndOf="@id/frameUpload"/>

        <!-- Other predictions -->

        <!-- Footer -->
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppins_light"
            android:text="Analyzed using CNN+BiLSTM"
            android:textColor="#6b6f7b"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>